
# Enable rewriting
RewriteEngine On

# If the request is not for a file or directory that exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Explicitly serve these files directly, exclude them from SPA routing
RewriteRule ^sitemap\.xml$ - [L]
RewriteRule ^robots\.txt$ - [L]

# Handle specific paths explicitly that need to be properly indexed by Google
RewriteRule ^specialized/secondary-glazing-building-regulations$ /index.html [L]
RewriteRule ^specialized/air-gap-secondary-glazing$ /index.html [L]
RewriteRule ^specialized/condensation-control$ /index.html [L]
RewriteRule ^specialized/thermal-insulation$ /index.html [L]
RewriteRule ^specialized/acoustic-glazing$ /index.html [L]
RewriteRule ^commercial/educational-sector$ /index.html [L]
RewriteRule ^commercial/hospitality-sector$ /index.html [L]
RewriteRule ^commercial/office-buildings$ /index.html [L]
RewriteRule ^commercial/listed-buildings$ /index.html [L]
RewriteRule ^residential/traditional-options$ /index.html [L]
RewriteRule ^residential/modern-solutions$ /index.html [L]
RewriteRule ^residential/sash-windows$ /index.html [L]
RewriteRule ^residential/bay-windows$ /index.html [L]
RewriteRule ^residential/horizontal-sliding$ /index.html [L]
RewriteRule ^residential/combination$ /index.html [L]
RewriteRule ^secondary-glazing-repairs$ /index.html [L]
RewriteRule ^specialized/sound-transmission-guide$ /index.html [L]
RewriteRule ^specialized/secondary-glazing-original-windows$ /index.html [L]
RewriteRule ^specialized/glass/premium$ /index.html [L]
RewriteRule ^specialized/glass/high-performance$ /index.html [L]

# Rewrite all other requests to index.html
RewriteRule ^ index.html [QSA,L]

# Browser caching for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  
  # CSS, JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
  ExpiresByType application/x-font-ttf "access plus 1 year"
  ExpiresByType application/x-font-opentype "access plus 1 year"
  ExpiresByType application/x-font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  # Compress HTML, CSS, JavaScript, Text, XML and fonts
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/font-woff
  AddOutputFilterByType DEFLATE application/font-woff2
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
  AddOutputFilterByType DEFLATE application/x-font-ttf
  AddOutputFilterByType DEFLATE font/opentype
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Set SPA specific headers
<IfModule mod_headers.c>
  # Prevent caching for index.html to ensure the latest version is served
  <FilesMatch "^index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Add headers for SEO crawlers
  <FilesMatch "^(specialized|commercial|residential)">
    Header set X-Robots-Tag "index,follow"
  </FilesMatch>

  # Enable Keep-Alive
  Header set Connection keep-alive
</IfModule>
