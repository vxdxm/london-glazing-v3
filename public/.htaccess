
# Enable rewriting
RewriteEngine On

# If the request is not for a file or directory that exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Explicitly serve these files directly, exclude them from SPA routing
RewriteRule ^sitemap\.xml$ - [L]
RewriteRule ^robots\.txt$ - [L]

# Handle specific paths explicitly that need to be properly indexed by Google
RewriteRule ^specialized/secondary-glazing-building-regulations$ - [L]
RewriteRule ^specialized/air-gap-secondary-glazing$ - [L]
RewriteRule ^specialized/condensation-control$ - [L]
RewriteRule ^specialized/thermal-insulation$ - [L]
RewriteRule ^specialized/acoustic-glazing$ - [L]
RewriteRule ^specialized/secondary-glazing-original-windows$ - [L]
RewriteRule ^commercial/educational-sector$ - [L]
RewriteRule ^commercial/hospitality-sector$ - [L]
RewriteRule ^commercial/office-buildings$ - [L]
RewriteRule ^commercial/listed-buildings$ - [L]
RewriteRule ^residential/traditional-options$ - [L]
RewriteRule ^residential/modern-solutions$ - [L]
RewriteRule ^residential/sash-windows$ index.html [L]
RewriteRule ^residential/bay-windows$ index.html [L]
RewriteRule ^residential/horizontal-sliding$ index.html [L]
RewriteRule ^residential/combination$ index.html [L]
RewriteRule ^secondary-glazing-repairs$ index.html [L]
RewriteRule ^specialized/sound-transmission-guide$ index.html [L]

# Rewrite all other requests to index.html
RewriteRule ^ index.html [QSA,L]

# Set SPA specific headers
<IfModule mod_headers.c>
  # Prevent caching for index.html to ensure the latest version is served
  <FilesMatch "^index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Add headers for SEO crawlers
  <FilesMatch "^(specialized|commercial|residential)">
    Header set X-Robots-Tag "index,follow"
  </FilesMatch>
</IfModule>
